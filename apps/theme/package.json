{
  "name": "@context_ui/theme",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./registry": {
      "types": "./dist/registry.d.ts",
      "default": "./dist/registry.js"
    },
    "./styles/globals.css": "./dist/styles/globals.css"
  },
  "sideEffects": ["dist/index.js", "dist/registry.js", "dist/styles/*.css"],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && pnpm run build:css",
    "build:css": "node -e \"require('fs').mkdirSync('dist/styles', { recursive: true })\" && tailwindcss -c tailwind.config.ts -i src/styles/globals.css -o dist/styles/globals.css --postcss",
    "dev": "pnpm run dev:css",
    "dev:css": "node -e \"require('fs').mkdirSync('dist/styles', { recursive: true })\" && tailwindcss -c tailwind.config.ts -i src/styles/globals.css -o dist/styles/globals.css --watch --postcss",
    "check": "tsc --noEmit",
    "test": "echo \"no tests\""
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "@context_ui/core": "workspace:*",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.462.0",
    "tailwind-merge": "^2.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.7",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.5.3"
  },
  "private": true
}
